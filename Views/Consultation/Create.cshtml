<section class="section">
    <div class="container">
        <div class="row justify-content-center text-center mb-5">
            <div class="col-md-7">
                <h2 class="heading" data-aos="fade-up">Discover your personal style</h2>
                <p data-aos="fade-up" data-aos-delay="100">Unsure of your personal style? Take our quick and easy style quiz to assist us in creating a personalized consultation just for you.</p>
                <button data-tf-popup="WIU3BsrK" data-tf-opacity="100" data-tf-hide-headers data-tf-size="50" data-tf-iframe-props="title=Personal Style Quiz" data-tf-transitive-search-params data-tf-medium="snippet" data-tf-hidden="total_scores=" style="all:unset;font-family:Helvetica,Arial,sans-serif;display:inline-block;max-width:100%;white-space:nowrap;overflow:hidden;text-overflow:ellipsis;background-color:#CB732B;color:#fff;font-size:20px;border-radius:25px;padding:0 33px;font-weight:bold;height:50px;cursor:pointer;line-height:50px;text-align:center;margin:0;text-decoration:none;">Take Quiz Now!</button><script src="//embed.typeform.com/next/embed.js"></script>
            </div>
        </div>
    </div>
</section>
<section class="section pb-4 bg-light" id="conform">
    <div class="container form2">
        <div class="row check-availabilty" id="next">
            <div class="col-md-7 bg-white p-md-5 p-4 mb-5 border consform" data-aos="fade-up" data-aos-offset="100">
                @using (Html.BeginForm("Create", "Consultation", FormMethod.Post))
                {
                    <h2 class="heading">Consult Us</h2>
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label asp-for="FirstName">First Name</label> <br />
                            <input asp-for="FirstName" />
                            <br /> <span asp-validation-for="FirstName" class="error-text text-error"></span>
                        </div>
                        <div class="col-md-6 form-group">
                            <label asp-for="LastName">Last Name</label> <br />
                            <input asp-for="LastName" />
                            <br /> <span asp-validation-for="LastName" class="error-text text-error"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label asp-for="Email">Email</label> <br />
                            <input asp-for="Email" />
                            <br /> <span asp-validation-for="Email" class="error-text text-error"></span>
                        </div>
                        <div class="col-md-6 form-group">
                            <label asp-for="Phone">Phone</label> <br />
                            <input asp-for="Phone" />
                            <br /> <span asp-validation-for="Phone" class="error-text text-error"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label asp-for="ReasonForConsultation">Reason for Consultation</label> <br />
                            @Html.DropDownListFor(m => m.ReasonForConsultation, Html.GetEnumSelectList<ConsType>())
                            <br /> <span asp-validation-for="ReasonForConsultation" class="error-text text-error"></span>

                        </div>
                        <div class="col-md-6 form-group">
                            <label asp-for="ConsultationType">Consultation Type</label> <br />
                            @Html.DropDownListFor(m => m.ConsultationType, Html.GetEnumSelectList<Types>())
                            <br /> <span asp-validation-for="ConsultationType" class="error-text text-error"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label asp-for="PackageType">Package Type</label> <br />
                            @Html.DropDownListFor(m => m.PackageType, Html.GetEnumSelectList<ConsType>())
                            <br /> <span asp-validation-for="PackageType" class="error-text text-error"></span>
                        </div>
                        <div class="col-md-6 form-group">
                            <label asp-for="PackageType">Preffered Method of Contact</label> <br />
                            @Html.RadioButtonFor(m => m.ContactMethod, "Phone", new { id = "PMC_Phone" }) @Html.Label("Phone")
                            @Html.RadioButtonFor(m => m.ContactMethod, "Email", new { id = "PMC_Email" }) @Html.Label("Email")
                            <br /> <span asp-validation-for="ContactMethod" class="error-text text-error"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 form-group">
                            @Html.Label("Availability Date") <br />
                            <input type="date" asp-for="AvailabilityDate">
                        </div>
                        <div class="col-md-6 form-group">
                            <label asp-for="Style">Preffered Style</label> <br />
                            @Html.DropDownListFor(m => m.Style, Html.GetEnumSelectList<Style>())
                            <br /> <span asp-validation-for="Style" class="error-text text-error"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 form-group">
                            <label asp-for="Message">Additional Information</label> <br />
                            @Html.TextAreaFor(m=>m.Message)
                            <br /> <span asp-validation-for="Message" class="error-text text-error"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 form-group">
                            @Html.CheckBox("Newsletter",true)
                            @Html.Label("Signup for our newsletter")
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <input type="submit" value="Reserve Now" class="btn-sm btn-primary text-white font-weight-bold">
                        </div>
                    </div>
                    @Html.ValidationSummary(false, " ", new {@class="text-error"})
                }
            </div>
        </div>
    </div>
</section>
<section class="section">
    <div class="container">
        <div class="row justify-content-center text-center mb-5">
            <div class="col-md-7">
                <h2 class="heading" data-aos="fade-up">Thank you for choosing StyleSense!</h2>
                <p data-aos="fade-up" data-aos-delay="100">Thank you for selecting StyleSense as your fashion partner. We are dedicated to helping you elevate your style and confidence. We appreciate your business and the opportunity to make a positive impact on your fashion choices. <br /> If you have any questions please contact us at: info@stylesense.com</p>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}